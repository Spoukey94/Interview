<Window x:Class="CustomerModule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerModule"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Customer Module" Height="400" Width="550">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="181" Margin="0,178,0,0" VerticalAlignment="Top" Width="534">
            <DataGrid x:Name="dgCustomer" HorizontalAlignment="Left" Height="181" VerticalAlignment="Top" IsReadOnly="True" Width="522" SelectedCellsChanged="dgCustomer_SelectedCellsChanged" Margin="10,0,0,0" AutoGeneratedColumns="dgCustomer_AutoGeneratedColumns"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="121" Margin="10,0,0,0" VerticalAlignment="Top" Width="522">
            <Grid x:Name="grName" HorizontalAlignment="Left" Height="62" Margin="10,21,0,0" VerticalAlignment="Top" Width="238">
                <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218"/>
                <Label x:Name="lblName" Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="111"/>
            </Grid>
            <Grid x:Name="grTelephone" HorizontalAlignment="Left" Height="62" Margin="274,21,0,0" VerticalAlignment="Top" Width="238">
                <TextBox x:Name="tbTelephone" HorizontalAlignment="Left" Height="23" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" PreviewTextInput="tbTelephone_PreviewTextInput"/>
                <Label x:Name="lblTelephone" Content="Telephone number:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="111"/>
            </Grid>
            <Grid x:Name="grSurname" HorizontalAlignment="Left" Height="62" Margin="10,59,0,0" VerticalAlignment="Top" Width="238">
                <TextBox x:Name="tbSurname" HorizontalAlignment="Left" Height="23" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218"/>
                <Label x:Name="lblSurname" Content="Surname:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="111"/>
            </Grid>
            <Grid x:Name="grAddress" HorizontalAlignment="Left" Height="62" Margin="274,59,0,0" VerticalAlignment="Top" Width="238">
                <TextBox x:Name="tbAddress" HorizontalAlignment="Left" Height="23" Margin="10,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218"/>
                <Label x:Name="lblAddress" Content="Address:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="111"/>
            </Grid>
            <Grid x:Name="grSurname_Copy" HorizontalAlignment="Left" Height="54" Margin="10,-16,0,0" VerticalAlignment="Top" Width="74">
                <TextBox x:Name="tbID" Visibility="Hidden" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="10,29,-15,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="53"/>
            </Grid>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="52" Margin="10,121,0,0" VerticalAlignment="Top" Width="522">
            <Button x:Name="btnRefresh" Content="Reset" HorizontalAlignment="Left" Margin="0,29,0,0" VerticalAlignment="Top" Width="34" Height="23" Click="btnRefresh_Click"/>
            <Button x:Name="btnInsert" Content="Add" HorizontalAlignment="Left" Margin="488,29,0,0" VerticalAlignment="Top" Width="34" Height="23" Click="btnInsert_Click"/>
            <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="440,29,0,0" VerticalAlignment="Top" Width="43" Height="23" Click="btnDelete_Click"/>
            <Button x:Name="btnUpdate" Content="Modify" HorizontalAlignment="Left" Margin="392,29,0,0" VerticalAlignment="Top" Width="43" Height="23" Click="btnUpdate_Click"/>
        </Grid>
    </Grid>
</Window>
